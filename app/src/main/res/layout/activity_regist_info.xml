<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/regist_info_background">
<LinearLayout 
    android:id="@+id/regist_info_head_layout"
    android:layout_width="match_parent"
    android:layout_height="200dip"
    android:background="@mipmap/regist_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/regist_info_head"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dip"
        android:contentDescription="@string/regist_head_desp"
        android:src="@mipmap/login_head_img" />
</LinearLayout>
<RelativeLayout 
    android:id="@+id/regist_info_info_layout"
    android:layout_width="match_parent"
    android:layout_height="190dip"
    android:layout_below="@id/regist_info_head_layout"
    android:background="@android:color/white">
    <TextView 
        android:id="@+id/regist_info_nickname_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:layout_marginLeft="35dip"
        android:layout_marginStart="35dip"
        android:text="@string/regist_info_nickname"
        android:textSize="@dimen/regist_info_textsize"
        android:textColor="@color/regist_info_textcolor"/>
    <EditText 
        android:id="@+id/regist_info_nickname_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginRight="35dip"
        android:layout_marginEnd="35dip"
        android:background="@null"
        android:gravity="end"
        android:layout_alignBaseline="@id/regist_info_nickname_t"
        android:layout_toRightOf="@id/regist_info_nickname_t"
        android:layout_toEndOf="@id/regist_info_nickname_t"
        android:inputType="text"
        android:textSize="@dimen/regist_info_textsize"
        android:textColor="@color/regist_info_textcolor"/>
    <View
        android:id="@+id/regist_info_nickname_stroke" 
       	android:layout_width="match_parent"
       	android:layout_height="1dip"
       	android:layout_marginTop="5dip"
       	android:layout_marginLeft="25dip"
       	android:layout_marginStart="25dip"
       	android:layout_marginRight="25dip"
       	android:layout_marginEnd="25dip"
       	android:background="@color/regist_info_stroke"
       	android:layout_below="@id/regist_info_nickname_t"/>
    <TextView 
        android:id="@+id/regist_info_sex_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="35dip"
        android:layout_marginStart="35dip"
        android:layout_below="@id/regist_info_nickname_stroke"
        android:text="@string/regist_info_sex"
        android:textSize="@dimen/regist_info_textsize"
        android:textColor="@color/regist_info_textcolor"/>
    <EditText 
        android:id="@+id/regist_info_sex_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginRight="35dip"
        android:layout_marginEnd="35dip"
        android:background="@null"
        android:gravity="end"
        android:layout_alignBaseline="@id/regist_info_sex_t"
        android:layout_toRightOf="@id/regist_info_sex_t"
        android:layout_toEndOf="@id/regist_info_sex_t"
        android:inputType="text"
        android:textSize="@dimen/regist_info_textsize"
        android:textColor="@color/regist_info_textcolor"/>
    <View
        android:id="@+id/regist_info_sex_stroke" 
       	android:layout_width="match_parent"
       	android:layout_height="1dip"
       	android:layout_marginTop="5dip"
       	android:layout_marginLeft="25dip"
       	android:layout_marginStart="25dip"
       	android:layout_marginRight="25dip"
       	android:layout_marginEnd="25dip"
       	android:background="@color/regist_info_stroke"
       	android:layout_below="@id/regist_info_sex_t"/>
    <TextView 
        android:id="@+id/regist_info_area_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="35dip"
        android:layout_marginStart="35dip"
        android:layout_below="@id/regist_info_sex_stroke"
        android:text="@string/regist_info_area"
        android:textSize="@dimen/regist_info_textsize"
        android:textColor="@color/regist_info_textcolor"/>
    <EditText 
        android:id="@+id/regist_info_area_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginRight="35dip"
        android:layout_marginEnd="35dip"
        android:background="@null"
        android:gravity="end"
        android:layout_alignBaseline="@id/regist_info_area_t"
        android:layout_toRightOf="@id/regist_info_area_t"
        android:layout_toEndOf="@id/regist_info_area_t"
        android:inputType="text"
        android:textSize="@dimen/regist_info_textsize"
        android:textColor="@color/regist_info_textcolor"/>
    <View 
        android:id="@+id/regist_info_area_stroke" 
       	android:layout_width="match_parent"
       	android:layout_height="1dip"
       	android:layout_marginTop="5dip"
       	android:layout_marginLeft="25dip"
       	android:layout_marginStart="25dip"
       	android:layout_marginRight="25dip"
       	android:layout_marginEnd="25dip"
       	android:background="@color/regist_info_stroke"
       	android:layout_below="@id/regist_info_area_t"/>
    <TextView 
        android:id="@+id/regist_info_signature_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="35dip"
        android:layout_marginStart="35dip"
        android:layout_below="@id/regist_info_area_stroke"
        android:text="@string/regist_info_signature"
        android:textSize="@dimen/regist_info_textsize"
        android:textColor="@color/regist_info_textcolor"/>
    <EditText 
        android:id="@+id/regist_info_signature_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginRight="35dip"
        android:layout_marginEnd="35dip"
        android:background="@null"
        android:gravity="end"
        android:layout_alignBaseline="@id/regist_info_signature_t"
        android:layout_toRightOf="@id/regist_info_signature_t"
        android:layout_toEndOf="@id/regist_info_signature_t"
        android:inputType="text"
        android:textSize="@dimen/regist_info_textsize"
        android:textColor="@color/regist_info_textcolor"/>
</RelativeLayout>  
<LinearLayout 
    android:id="@+id/regist_info_regist_layout"
    android:layout_width="match_parent"
    android:layout_height="150dip"
    android:background="@android:color/white"
    android:layout_marginTop="20dip"
    android:layout_below="@id/regist_info_info_layout"
    android:orientation="horizontal">
    <Button 
        android:id="@+id/regist_info_regist"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_marginLeft="110dip"
        android:layout_marginStart="110dip"
        android:layout_marginRight="110dip"
        android:layout_marginEnd="110dip"
        android:layout_gravity="center"
        android:background="@drawable/regist_btn"
        android:text="@string/regist_regist"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>
</RelativeLayout>