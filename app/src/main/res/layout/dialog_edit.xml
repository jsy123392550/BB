<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_dialog_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="转发：" />



    <Button
        android:id="@+id/btn_bbdetail_forward_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_edit"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/dialog_btn"
        android:text="@string/sure"
        android:textColor="@color/toolbar" />
    <EditText
        android:id="@+id/et_bbdetail_forward_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_dialog_edit"
        android:layout_alignBaseline="@id/tv_dialog_edit"
        android:layout_alignRight="@id/btn_bbdetail_forward_dialog"
        android:background="@drawable/bbdetail_et"
        android:padding="8dp" />
</RelativeLayout>