<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include android:id="@+id/toolbar_retrieve_pwd"
        layout="@layout/toolbar_center_text"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/retrieve_cellphone"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"/>
        <EditText
            android:id="@+id/edt_phone_num"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="输入手机号以找回密码"
            android:maxLength="13"
            android:layout_toRightOf="@id/tv_phone"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/regist_verification_text"
            android:textSize="16sp"
            android:layout_below="@id/tv_phone"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:layout_alignRight="@id/tv_phone"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edt_verify"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:maxLength="7"
            android:layout_marginTop="16dp"
            android:layout_below="@id/edt_phone_num"
            android:layout_toRightOf="@id/tv_verify"
            android:layout_alignRight="@id/edt_phone_num"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/regist_pwd_text"
            android:textSize="16sp"
            android:layout_below="@id/tv_verify"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:layout_alignRight="@id/tv_verify"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edt_pwd"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="@string/regist_pwd_text"
            android:maxLength="13"
            android:layout_marginTop="16dp"
            android:layout_below="@id/edt_verify"
            android:layout_toRightOf="@id/tv_pwd"
            android:layout_alignRight="@id/edt_verify"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_pwd_confirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="再次确认："
            android:textSize="14sp"
            android:layout_below="@id/tv_pwd"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_alignRight="@id/tv_pwd"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edt_pwd_confirm"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="重新输入密码"
            android:maxLength="13"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tv_pwd"
            android:layout_toRightOf="@id/tv_pwd"
            android:layout_alignRight="@id/edt_pwd"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认找回"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>