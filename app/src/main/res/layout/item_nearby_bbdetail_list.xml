<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/img_nearby_bbdetail_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_nearby_bbdetail_item_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="大骚逼一枚"
        android:textSize="16sp"
        android:textColor="@color/toolbar"
        android:layout_alignTop="@id/img_nearby_bbdetail_item"
        android:layout_toRightOf="@id/img_nearby_bbdetail_item"
        android:layout_toEndOf="@id/img_nearby_bbdetail_item"/>
    <TextView
        android:id="@+id/tv_nearby_bbdetail_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_nearby_bbdetail_item_nickname"
        android:layout_alignStart="@id/tv_nearby_bbdetail_item_nickname"
        android:layout_below="@id/tv_nearby_bbdetail_item_nickname"
        android:layout_marginTop="4dp"
        android:text="我今天没吃药，感觉自己萌萌哒"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/tv_nearby_bbdetail_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/img_nearby_bbdetail_item"
        android:text="3分钟前"
        android:textSize="12sp"
        android:textColor="@color/main_bottom_module_text_normal"
        />
</RelativeLayout>