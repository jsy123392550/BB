<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/toolbar_center_text" />


    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#f0f4f7"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_bottom_nearby"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bottom_nearby"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/main_bottom_nearby_normal" />

            <TextView
                android:id="@+id/tv_bottom_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/module_near"
                android:textColor="@color/main_bottom_module_text_normal"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_bottom_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/img_bottom_news"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/main_bottom_news_normal" />
                <ImageView
                    android:id="@+id/iv_news_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@mipmap/msg_tips"
                    android:textColor="@android:color/white"
                    android:visibility="visible" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_bottom_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/module_message"
                android:textColor="@color/main_bottom_module_text_normal"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_bottom_BB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/img_bottom_BB"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/main_bottom_bb_normal" />
                <ImageView
                    android:id="@+id/iv_bb_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@mipmap/msg_tips"
                    android:textColor="@android:color/white"
                    android:visibility="visible" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_bottom_BB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/login_label"
                android:textColor="@color/main_bottom_module_text_normal"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_bottom_linkman"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp">

                <ImageView
                    android:id="@+id/img_bottom_linkman"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/main_bottom_linkman_normal" />
                <ImageView
                    android:id="@+id/iv_contacts_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@mipmap/msg_tips"
                    android:textColor="@android:color/white"
                    android:visibility="visible" />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_bottom_linkman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/module_linkman"
                android:textColor="@color/main_bottom_module_text_normal"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_bottom_userinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bottom_userinfo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/main_bottom_userinfo_normal" />

            <TextView
                android:id="@+id/tv_bottom_userinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/module_me"
                android:textColor="@color/main_bottom_module_text_normal"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar"
        android:layout_above="@id/main_bottom">

    </RelativeLayout>
</RelativeLayout>
