<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
    <include
        android:id="@+id/main_toolbar"
        layout="@layout/toolbar_center_text"/>
    <!-- 顶部内容，用于fragment的切换 -->
    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_toolbar">

    </RelativeLayout>

    <!-- 底部栏 用于切换5个模块 -->
    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f4f7"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_bottom_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_bottom_nearby"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_bottom_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_bottom_news"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_bottom_BB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_bottom_bb"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_bottom_linkman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_bottom_linkman"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_bottom_userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
